    "apollo-server-koa": "^1.3.2",
    "babel-polyfill": "^6.26.0",
    "bcryptjs": "^2.4.3",
    "dataloader": "^1.4.0",
    "dotenv-safe": "^4.0.4",
    "fs-extra-promise": "^1.0.1",
    "graphql": "^0.13.2",
    "graphql-relay": "^0.5.4",
    "graphql-subscriptions": "^0.5.8",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.1.0",
    "kcors": "^2.2.1",
    "koa": "^2.5.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compose": "^4.0.0",
    "koa-convert": "^1.2.0",
    "koa-graphql": "^0.7.5",
    "koa-graphql-batch": "^1.1.0",
    "koa-logger": "^3.1.0",
    "koa-router": "^7.4.0",
    "mongoose": "^5.0.8",
    "subscriptions-transport-ws": "^0.9.6"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/node": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-stage-0": "^7.0.0-beta.54",
    "@babel/preset-stage-3": "^7.0.0-beta.54",
    "@babel/preset-typescript": "^7.0.0-beta.54",
    "@babel/register": "^7.0.0-beta.54",
    "@types/babel-core": "^6.25.5",
    "@types/bcryptjs": "^2.4.1",
    "@types/dotenv-safe": "^5.0.0",
    "@types/eslint": "^4.16.3",
    "@types/fs-extra-promise": "^1.0.7",
    "@types/graphql": "^0.13.3",
    "@types/graphql-relay": "^0.4.5",
    "@types/isomorphic-fetch": "^0.0.34",
    "@types/jest": "^23.3.0",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/kcors": "^2.2.3",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-compose": "^3.2.2",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "^7.0.30",
    "@types/mongodb-memory-server": "^1.8.0",
    "@types/mongoose": "^5.2.1",
    "@types/prettier": "^1.13.2",
    "@types/rimraf": "^2.0.2",
    "babel-eslint": "^8.2.2",
    "babel-jest": "22.4.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "esm": "^3.0.5",
    "husky": "^0.14.3",
    "jest": "22.4.3",
    "jest-cli": "22.4.3",
    "lint-staged": "6.0.0",
    "mongodb-memory-server": "^1.7.3",
    "nodemon": "^1.17.1",
    "prettier": "^1.11.1",
    "repl": "^0.1.3",
    "repl-promised": "^0.1.0",
    "repl.history": "^0.1.4",
    "rimraf": "^2.6.2",
    "typescript": "^2.9.2"
  },
  "jest": {
    "testEnvironment": "<rootDir>/test/environment/mongodb",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./dist"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coverageDirectory": "./coverage/",
    "resetModules": true
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/entria/graphql-dataloader-boilerplate"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --single-quote true --trailing-comma all --print-width 120",
      "git add"
    ]
  },
  "scripts": {
    "build": "npm run clear && babel src --ignore *.spec.js --out-dir dist --extensions \".ts,.tsx\"",
    "clear": "rimraf ./dist",
    "lint": "eslint src/**",
    "precommit": "lint-staged",
    "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch --coverage",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "watch": "nodemon index.ts babel-node --extensions '.ts,.tsx'",
    "typecheck": "tsc"
  }
}
